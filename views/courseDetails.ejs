<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.name %> - CareerExplorer</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-gradient-to-r from-blue-600 to-indigo-500 text-white p-6 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-bold">CareerExplorer</h1>
            <nav>
                <a href="/" class="text-lg hover:text-gray-300 transition">Home</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto flex-grow py-8 space-y-8">
        <!-- Course Details -->
        <section class="bg-white shadow-lg rounded-lg p-8 hover:shadow-2xl transition-shadow duration-300">
            <div class="flex flex-wrap lg:flex-nowrap items-center">
                <div class="lg:w-1/2">
                    <img src="/<%= course.image %>" alt="<%= course.name %>" class="w-full h-72 object-cover rounded-lg">
                </div>
                <div class="lg:w-1/2 lg:pl-8 mt-6 lg:mt-0">
                    <h2 class="text-3xl font-bold text-blue-700 mb-4"><%= course.name %></h2>
                    <p class="text-gray-700 text-lg leading-relaxed"><%= course.description %></p>
                </div>
            </div>
        </section>

        <!-- Prerequisites -->
        <section class="bg-white shadow-lg rounded-lg p-8 hover:shadow-2xl transition-shadow duration-300">
            <h3 class="text-2xl font-semibold text-indigo-600 mb-4">Prerequisites</h3>
            <ul class="list-disc list-inside text-gray-700 space-y-2">
                <% course.prerequisites.forEach((prerequisite) => { %>
                    <li><%= prerequisite.name %></li>
                <% }) %>
            </ul>
        </section>

        <!-- Resources -->
        <section class="bg-white shadow-lg rounded-lg p-8 hover:shadow-2xl transition-shadow duration-300">
            <h3 class="text-2xl font-semibold text-green-600 mb-4">Resources</h3>
            <ul class="space-y-4">
                <% course.resources.forEach((resource) => { %>
                    <li class="p-4 bg-gray-100 rounded-lg shadow-sm hover:bg-gray-200 transition-colors duration-300">
                        <a href="<%= resource.link %>" class="text-blue-600 hover:underline" target="_blank">
                            <%= resource.title %>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </section>

        <!-- Quiz Section -->
        <section class="bg-white shadow-lg rounded-lg p-8 hover:shadow-2xl transition-shadow duration-300">
            <h3 class="text-2xl font-semibold text-red-600 mb-4">Quiz</h3>
            <p class="text-gray-700 mb-4">Test your understanding by taking the quiz!</p>
            <a href="/quiz/<%= course._id %>" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition-colors duration-300">
                Start Quiz
            </a>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6 text-center">
        &copy; 2024 CareerExplorer. All rights reserved.
    </footer>
</body>
</html>